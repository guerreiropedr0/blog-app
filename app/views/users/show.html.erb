<div class="center flex-column m-3">
  <%= render partial: "shared/user", locals: {user: @user}%>
  <div class="w-50 w-100-mobile mb-3 bg-light p-2 border">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>
  <div class="d-flex flex-column w-50 w-100-mobile">
    <% @user.recent_posts.each do |post| %>
      <div class="d-flex flex-column bg-light p-2 border mb-3">
        <h5><%= link_to post.title, user_post_path(@user, post.id), class: "no-style" %></h5>
        <p><%= post.text %></p>
        <p class="small align-self-end">
          Comments
          <span class="badge bg-secondary">
            <%= post.comments_counter %>
          </span>
          Likes
          <span class="badge bg-secondary">
            <%= post.likes_counter %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
  <%= link_to "See all posts" , user_posts_path(@user.id), class: "btn btn-primary" %>
</div>
